<aura:component controller="POSApprovalModalController">
    <aura:attribute name="passcode" type="String" />  
    <aura:attribute name="error" type="String" />
    <aura:attribute name="posSettings" type="POS_Setting__mdt" />
    <aura:handler name="init" value="{!this}" action="c.doInit"/>
    <aura:registerEvent name="posAppEvent" type="c:POSAppEvent"/>
    
    <section role="dialog" tabindex="-1" aria-modal="true" aria-labelledby="modal-heading-01" class="slds-modal slds-fade-in-open">
        <div class="slds-modal__container">
            <button class="slds-button slds-button_icon slds-modal__close" onclick="{!c.hideModal}">
                <i class="fa fa-window-close" aria-hidden="true"></i>
                <span class="slds-assistive-text">Cancel and close</span>
            </button>
            <div class="slds-modal__header">
                <h1 id="modal-heading-01" class="slds-modal__title slds-hyphenate " tabindex="-1">Discount Approval</h1>
            </div>
            <div class="slds-modal__content slds-p-around_medium" id="modal-content-id-1">
                <div class="slds-grid slds-wrap">
                    
                    
                    <div class="slds-col slds-size_12-of-12">
                        <p class="panel-p">Passcode</p> 
                        <span onkeypress="{!c.loginViaEnter}">
                            
                            <input type="password" class="pos-cash pos-approval-input" name="approvalPasscode" id="approvalPasscode" 
                                   maxlength="6" />
                        </span>
                    </div>
                    
                    
                    
                        <div class="slds-col slds-size_12-of-12 slds-m-bottom_medium slds-m-top_small">
                           
                                <lightning:button variant="brand" class="pos-cash btn-pos btn-pos-new-order" onclick="{!c.approve}" label="Approve" title="Approve"  />
                           
                            <p class="error-msg">{!v.error}</p>
                        </div>
                        
                        
                    </div>
                    
                    
              
                
            </div>
        </div>
    </section>
    <div class="slds-backdrop slds-backdrop_open" role="presentation" ></div>
    
    
</aura:component>