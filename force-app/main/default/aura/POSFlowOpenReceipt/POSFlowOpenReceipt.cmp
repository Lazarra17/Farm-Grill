<aura:component implements="lightning:availableForFlowScreens">
    <aura:attribute name="recordId" type="String" description="recordId" access="global" />
    <aura:attribute name="path" type="String" description="path" access="global" />
    <aura:attribute name="url" type="String" />
    <aura:handler name="init" value="{!this}" action="c.doInit"/>
    <div class="slds-theme_default">
    	<p>Click the link to reprint receipt - <a href="{!v.url}">{!v.url}</a></p>
    </div>
</aura:component>