<aura:component controller="POSCashDrawersListController">
    <aura:attribute name="cashDrawer" type="Object"  />
    <aura:attribute name="status" type="String"  />
    <aura:attribute name="note" type="String"  />
    <aura:attribute name="errMessage" type="String"  />
    <aura:attribute name="showSpinner" type="Boolean" default="false"  />
    <aura:registerEvent name="compEvent" type="c:POSCashDrawersListEvent"/>
    
    
    <aura:if isTrue="{!v.showSpinner}">
        <div class="pos-spinner">
            <lightning:spinner alternativeText="Loading" size="medium" />
        </div>
    </aura:if>
    
    
    <section role="dialog" tabindex="-1" aria-modal="true" aria-labelledby="modal-heading-01" class="slds-modal slds-fade-in-open">
        <div class="slds-modal__container">
            <button class="slds-button slds-button_icon slds-modal__close" onclick="{!c.hideModal}">
                <i class="fa fa-window-close" aria-hidden="true"></i>
                <span class="slds-assistive-text">Cancel and close</span>
            </button>
            <div class="slds-modal__header">
                <h1 id="modal-heading-01" class="slds-modal__title slds-hyphenate " tabindex="-1">CASH DRAWER RECONCILIATION</h1>
            </div>
            <div class="slds-modal__content slds-p-around_medium" id="modal-content-id-1">
                <div class="slds-grid slds-wrap slds-gutters">
                    
                    <div class="slds-col slds-size_12-of-12 slds-m-top_medium">
                        <span>{!v.errMessage}</span>
                    </div>
                    
                    <div class="slds-col slds-size_12-of-12">
                        <lightning:input type="text" name="cashDrawerItem" disabled="true" label="Cash Drawer Id" value="{!v.cashDrawer.Name}"/>
                    </div>
                    
                    <div class="slds-col slds-size_12-of-12">
                        <lightning:input type="text" name="expectedCount" disabled="true" label="Expected Count" value="{!v.cashDrawer.Expected_Count__c}"/>
                    </div>
                    
                    <div class="slds-col slds-size_12-of-12">
                        <lightning:input type="text" name="endingCount" disabled="true" label="Ending Count" value="{!v.cashDrawer.Ending_Count__c}"/>
                    </div>
                    
                    <div class="slds-col slds-size_12-of-12">
                        <lightning:input type="text" name="difference" disabled="true" label="Difference" value="{!v.cashDrawer.Difference__c}" aura:id="cdrawer" />
                    </div>
                    
                    <div class="slds-col slds-size_12-of-12">
                        <lightning:select name="status" label="Status" required="true" value="{!v.status}" aura:id="cdrawer" >
                            <option value="">--Select Status--</option>
                            <option value="Reconciling">Reconciling</option>
                            <option value="Closed">Closed</option>
                        </lightning:select>
                    </div>
                    
                    <div class="slds-col slds-size_12-of-12">
                        <lightning:textarea required="true" name="notes" label="Notes" aura:id="cdrawer" value="{!v.note}" />
                        
                    </div>
                    
                    <div class="slds-col slds-size_12-of-12 slds-text-align_right slds-m-top_small">
                        <lightning:button variant="brand"  label="&nbsp;&nbsp;&nbsp;Save &nbsp;&nbsp;&nbsp;" title="Save" onclick="{!c.save }" />
                      
                    </div>
                    
                </div>
                
            </div>
        </div>
    </section>
    <div class="slds-backdrop slds-backdrop_open" role="presentation"></div>
</aura:component>