<aura:component controller="FGMyOrdersController" >
    
    <aura:attribute name="opptyId" type="String"/>
    <aura:attribute name="isDeleted" type="boolean" default="true" />
    <aura:attribute name="showConfirmation" type="boolean" default="true" />
    <aura:attribute name="showSpinner" type="Boolean" default="false" />
    
    <aura:if isTrue="{!v.showSpinner}">
        <div class="full-page-spinner">
            <lightning:spinner alternativeText="Loading" size="medium" />
        </div>
    </aura:if>
    
    <section role="dialog" tabindex="-1" aria-modal="true" aria-labelledby="modal-heading-01" class="slds-modal slds-fade-in-open">
        <div class="slds-modal__container">
            <button class="slds-button slds-button_icon slds-modal__close" onclick="{!c.hideModal}">
                <i class="fa fa-window-close" aria-hidden="true"></i>
                <span class="slds-assistive-text">Cancel and close</span>
            </button>
            <div class="slds-modal__header">
                <h1 id="modal-heading-01" class="slds-modal__title slds-hyphenate " tabindex="-1">CANCEL ORDER</h1>
            </div>
            <div class="slds-modal__content slds-p-around_medium" id="modal-content-id-1">
                <div class="slds-grid slds-gutters">
                    
                    <aura:if isTrue="{!!v.isDeleted}">
                        
                        <div class="slds-col slds-size_12-of-12">
                            <p>Sorry. Your order is already confirmed.  
                                You can no longer cancel your order.</p>
                         
                        </div>
                      
                    </aura:if>
                    
                    
                    <aura:if isTrue="{!v.showConfirmation}">
                        <div class="slds-col slds-size_12-of-12">
                            <p>Do you wish to cancel your order?</p>
                            <div class="slds-align_absolute-center">
                                
                                <lightning:button variant="destructive" label="&nbsp;&nbsp;Yes&nbsp;&nbsp;" title="Yes" onclick="{! c.removeOrder }"/>
                                <lightning:button variant="brand-outline" label="&nbsp;&nbsp;No&nbsp;&nbsp;" title="No" onclick="{! c.hideModal }" />
                            </div>
                            
                        </div>
                    </aura:if>
                </div>
                
            </div>
        </div>
    </section>
    <div class="slds-backdrop slds-backdrop_open" role="presentation" ></div>
</aura:component>