<aura:component >
    <aura:attribute name="opp" type="Opportunity"  />
    <aura:attribute name="order" type="Object"  />
    <aura:attribute name="posSettings" type="POS_Setting__mdt" />
    <aura:registerEvent name="compEvent" type="c:POSEvent"/>
    
    <section role="dialog" tabindex="-1" aria-modal="true" aria-labelledby="modal-heading-01" class="slds-modal slds-fade-in-open">
        <div class="slds-modal__container">
            <!--button class="slds-button slds-button_icon slds-modal__close" onclick="{!c.hideModal}">
                <i class="fa fa-window-close" aria-hidden="true"></i>
                <span class="slds-assistive-text">Cancel and close</span>
            </button-->
            <div class="slds-modal__header">
                <h1 id="modal-heading-01" class="slds-modal__title slds-hyphenate " tabindex="-1">SUMMARY</h1>
            </div>
            <div class="slds-modal__content slds-p-around_medium" id="modal-content-id-1">
                <div class="slds-grid">
                    <div class="slds-col slds-size_8-of-12">
                        <div class="slds-grid slds-wrap">
                            <div class="slds-col slds-size_6-of-12">
                                <p class="print-amount color-red">Total Amount: </p>
                            </div>
                             <div class="slds-col slds-size_6-of-12">
                                <p class="print-amount color-red"><lightning:formattedNumber type="currency" currencyCode="PHP" style="currency" value="{!v.order.Total}" minimumFractionDigits="2" /></p>
                              </div>
                            
                            <div class="slds-col slds-size_6-of-12">
                                <p class="print-amount color-green">Cash Tendered: </p>
                            </div>
                             <div class="slds-col slds-size_6-of-12">
                                 <p class="print-amount color-green"><lightning:formattedNumber type="currency" currencyCode="PHP" style="currency" value="{!v.order.PaymentReceived}" minimumFractionDigits="2" /> </p>
                             </div>
                            
                            <div class="slds-col slds-size_6-of-12">
                               <p class="print-amount color-orange">Change: </p>
                            </div>
                             <div class="slds-col slds-size_6-of-12">
                                <p class="print-amount color-orange"><lightning:formattedNumber type="currency" currencyCode="PHP" style="currency" value="{!v.order.Change}" minimumFractionDigits="2" /> </p>
                            </div>
                            
                        </div>
                        
                    </div>
                    
                    <div class="slds-col slds-size_4-of-12 slds-text-align_center">
                        
                        <p class="slds-p-bottom_medium"><lightning:button variant="brand" class="full-width slds-p-top_x-small slds-p-bottom_x-small" label="CUSTOMER RECEIPT" title="CUSTOMER RECEIPT" onclick="{! c.printCustReceipt }" /></p>
                        <p class="slds-p-bottom_medium"><lightning:button variant="brand" label="KITCHEN RECEIPT" class="full-width slds-p-top_x-small slds-p-bottom_x-small" title="KITCHEN RECEIPT" onclick="{! c.printKitchenReceipt }" /></p>
                        <p ><lightning:button variant="success" label="COMPLETE ORDER" class="full-width slds-p-top_x-small slds-p-bottom_x-small" title="NEW ORDER" onclick="{! c.newOrder }" /></p>
                        
                    </div>
                    
                    
                    
                    
                </div>
                
            </div>
        </div>
    </section>
    <div class="slds-backdrop slds-backdrop_open" role="presentation"></div>
</aura:component>